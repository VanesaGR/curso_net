
@{
    ViewBag.Title = "Estadistica";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Estadística notas</title>
</head>
<body>
    <h3>Estadistica notas</h3>
