
@{
    ViewBag.Title = "Calculadora";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Calculadora</title>
</head>
<body>
    <h3>Calculadora</h3>
    <div>
        <form method="post">
            Numero 1:<input type="text" name="txtu" value="@ViewBag.u" />
            Numero 2:<input type="text" name="txtd" value="@ViewBag.d" />
            <hr />
            <h2>RESULTADO</h2>
            <hr />
            Suma: <input type="text" name="txtsuma" value="@ViewBag.s" />
            Resta: <input type="text" name="txtresta" value="@ViewBag.r" />
            Multiplicación: <input type="text" name="txtmulti" value="@ViewBag.m" />
            División: <input type="text" name="txtdivi" value="@ViewBag.d" />
            <input type="submit" value="calcular" />
        </form>
    </div>
    <div>
        @Html.ActionLink("Volver al menú principal", "Index")
    </div>
</body>
</html>

